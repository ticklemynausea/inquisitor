<?xml version="1.0" encoding="UTF-8"?>
<project name="module_inquisitor" default="compile.module.inquisitor">
  <dirname property="module.inquisitor.basedir" file="${ant.file.module_inquisitor}"/>
  
  <property name="module.jdk.home.inquisitor" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.inquisitor" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.inquisitor" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.inquisitor" value="-encoding UTF-8 -source 1.7 ${compiler.args}"/>
  
  <property name="inquisitor.output.dir" value="${module.inquisitor.basedir}/out/production/inquisitor"/>
  <property name="inquisitor.testoutput.dir" value="${module.inquisitor.basedir}/out/test/inquisitor"/>
  
  <path id="inquisitor.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="inquisitor.module.production.classpath">
    <path refid="${module.jdk.classpath.inquisitor}"/>
    <path refid="library.bukkit-1.7.2-r0.3.classpath"/>
    <path refid="library.vault.classpath"/>
    <path refid="library.freemarker.classpath"/>
    <path refid="library.snakeyaml-1.13.classpath"/>
  </path>
  
  <path id="inquisitor.runtime.production.module.classpath">
    <pathelement location="${inquisitor.output.dir}"/>
    <path refid="library.bukkit-1.7.2-r0.3.classpath"/>
    <path refid="library.vault.classpath"/>
    <path refid="library.freemarker.classpath"/>
    <path refid="library.snakeyaml-1.13.classpath"/>
  </path>
  
  <path id="inquisitor.module.classpath">
    <path refid="${module.jdk.classpath.inquisitor}"/>
    <pathelement location="${inquisitor.output.dir}"/>
    <path refid="library.bukkit-1.7.2-r0.3.classpath"/>
    <path refid="library.vault.classpath"/>
    <path refid="library.freemarker.classpath"/>
    <path refid="library.snakeyaml-1.13.classpath"/>
  </path>
  
  <path id="inquisitor.runtime.module.classpath">
    <pathelement location="${inquisitor.testoutput.dir}"/>
    <pathelement location="${inquisitor.output.dir}"/>
    <path refid="library.bukkit-1.7.2-r0.3.classpath"/>
    <path refid="library.vault.classpath"/>
    <path refid="library.freemarker.classpath"/>
    <path refid="library.snakeyaml-1.13.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.inquisitor">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.inquisitor">
    <patternset refid="excluded.from.module.inquisitor"/>
  </patternset>
  
  <path id="inquisitor.module.sourcepath">
    <dirset dir="${module.inquisitor.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.inquisitor" depends="compile.module.inquisitor.production,compile.module.inquisitor.tests" description="Compile module inquisitor"/>
  
  <target name="compile.module.inquisitor.production" depends="register.custom.compilers" description="Compile module inquisitor; production classes">
    <mkdir dir="${inquisitor.output.dir}"/>
    <javac2 destdir="${inquisitor.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.inquisitor}/javac">
      <compilerarg line="${compiler.args.inquisitor}"/>
      <bootclasspath refid="inquisitor.module.bootclasspath"/>
      <classpath refid="inquisitor.module.production.classpath"/>
      <src refid="inquisitor.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.inquisitor"/>
    </javac2>
    
    <copy todir="${inquisitor.output.dir}">
      <fileset dir="${module.inquisitor.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.inquisitor.tests" depends="register.custom.compilers,compile.module.inquisitor.production" description="compile module inquisitor; test classes" unless="skip.tests"/>
  
  <target name="clean.module.inquisitor" description="cleanup module">
    <delete dir="${inquisitor.output.dir}"/>
    <delete dir="${inquisitor.testoutput.dir}"/>
  </target>
</project>